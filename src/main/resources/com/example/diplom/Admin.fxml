<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?stylesheets @style.css?>

<TabPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diplom.AdminController">
    <Tab closable="false" style="-fx-background-radius: 10px;" text="Пользователи">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Управление пользователями" />

                <HBox alignment="CENTER" spacing="10.0">
                    <TextField fx:id="newUsernameField" promptText="Имя пользователя" />
                    <TextField fx:id="newEmailField" promptText="Адрес электронной почты" />
                    <PasswordField fx:id="newPasswordField1" promptText="Пароль" />
                    <ComboBox fx:id="newUserRoleComboBox" promptText="Выберите роль" />

                    <Button fx:id="createUserButton" onAction="#onCreateUserButtonClick" text="Создать" />
                </HBox>

                <TableView fx:id="userTableView" prefHeight="332.0" prefWidth="1291.0">
                    <columns>
                        <TableColumn fx:id="userIdColumn" prefWidth="28.799987316131592" styleClass="header-color" text="ID" />
                        <TableColumn fx:id="usernameColumn" prefWidth="214.4000301361084" style="-fx-border-spacing: 100;" styleClass="header-color" text="Имя" />
                        <TableColumn fx:id="emailColumn" minWidth="0.0" prefWidth="198.3999481201172" styleClass="header-color" text="Email" />
                        <TableColumn fx:id="roleColumn" prefWidth="182.39999389648438" styleClass="header-color" text="Роль" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER" spacing="10.0">
                    <TextField fx:id="editUsernameField" promptText="Новое имя" />
                    <TextField fx:id="editEmailField" promptText="Новый адрес" />
                    <PasswordField fx:id="editPasswordField1" promptText="Новый пароль" />
                    <Button onAction="#onSaveUserChangesButtonClick" text="Сохранить" />
                    <Button onAction="#onDeleteUserButtonClick" text="Удалить" />
                    <Button text="Назад" fx:id="cancelButton" onAction="#onCancelButtonClick"/>
<!--               <Button onAction="#onLogoutButtonClick" text="Выйти" />-->
                </HBox>
                <!--                onAction="#onAssignRoleButtonClick"-->
            </VBox>
        </ScrollPane>
    </Tab>

    <Tab closable="false" style="-fx-background-radius: 10px;" text="Проекты">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Управление проектами" />

                <HBox alignment="CENTER" spacing="10.0">
                    <TextField fx:id="projectNameField" promptText="Название проекта" />
                    <TextArea fx:id="projectDescriptionArea" prefRowCount="3" promptText="Описание проекта" />
                    <TextField fx:id="projectStartDateField" promptText="Дата начала" />
                    <TextField fx:id="projectEndDateField" promptText="Дата окончания" />
                    <TextField fx:id="projectBudgetField" promptText="Бюджет" />
                    <Button onAction="#onCreateProjectButtonClick" text="Создать" />
                </HBox>

                <TableView fx:id="projectTableView" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="projectIdColumn" text="ID" />
                        <TableColumn fx:id="projectNameColumn" text="Название" />
                        <TableColumn fx:id="projectDescriptionColumn" text="Описание" />
                        <TableColumn fx:id="projectStartDateColumn" text="Дата начала" />
                        <TableColumn fx:id="projectEndDateColumn" text="Дата окончания" />
                        <TableColumn fx:id="projectBudgetColumn" text="Бюджет" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER" spacing="10.0">
                    <TextField fx:id="editProjectNameField" promptText="Новое название" />
                    <TextArea fx:id="editProjectDescriptionArea" prefRowCount="3" promptText="Новое описание" />
                    <TextField fx:id="editProjectStartDateField" promptText="Новая дата начала" />
                    <TextField fx:id="editProjectEndDateField" promptText="Новая дата окончания" />
                    <TextField fx:id="editProjectBudgetField" promptText="Новый бюджет" />
                    <Button onAction="#updateProject" text="Сохранить" />
                    <Button onAction="#onDeleteProjectButtonClick" text="Удалить" />
                </HBox>
            </VBox>
        </ScrollPane>
    </Tab>

    <Tab closable="false" style="-fx-background-radius: 10px;" text="Ресурсы">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Управление ресурсами" />
                <ListView fx:id="projectRequestListView" prefHeight="150" />
                <Button text="Назначить специалистов" onAction="#assignSpecialists" />
            </VBox>
        </ScrollPane>
    </Tab>

    <Tab closable="false" style="-fx-background-radius: 10px;" text="Отчеты">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Управление данными" />
                <Button text="Сгенерировать отчет" />
            </VBox>
        </ScrollPane>
    </Tab>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</TabPane>
